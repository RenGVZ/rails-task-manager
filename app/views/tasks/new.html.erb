<h1>New Task</h1>
<%= form_for @task do |f| %>
  <div class="form-group">
      <h3>Title</h3>
      <%= f.text_field :title, class: "form-control form-control-lg" %>
      <% f.label :title, "Title" %>
      <h3>Description</h3>
      <% f.label :details, "Details" %>
      <%= f.text_field :details, class: "form-control form-control-lg" %> 
      <%= f.check_box :completed %>
    </div>
    <%= f.submit class: "btn btn-outline-info" %>
<% end %>
  